<div class="row">
    <center>
        {{!-- Available burgers --}}
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <h3 class="available">Burgers Available</h3>
            <div>

                {{!-- Add burgers to list with Handlebars --}}
                {{#each burgers}}
                {{#unless devoured}}
                <form action="burger/eat/{{id}}" method="POST">
                    <div class="input-group">
                        <li class="form-control">{{id}}.{{burger_name}}</li>
                        <span class="input-group-btn">
                            <button class="btn btn-danger" type="submit">Chomp!</button>
                        </span>
                    </div>
                </form>
                {{/unless}}
                {{/each}}

            </div>
        </div>

        <div class="col-md-1"></div>

        {{!-- Burgers eaten --}}
        <div class="col-md-3">
            <h3 class="devoured">Burgers Devoured</h3>
            <div>
                {{!-- Move eaten burgers --}}
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="input-group">
                    <li class="form-control">{{this.id}}.{{this.burger_name}}</li>
                </div>
                {{/if}}
                {{/each}}

            </div>

        </div>

    </center>
</div>